<h2> <%= @restaurant.name  %> </h2>

<p>
  Address: <%= @restaurant.address %>
</p>
<p>
  Cuisine type: <%= @restaurant.category %>
</p>
<ul>
  Reviews: <% @restaurant.reviews.each do |review| %>
  <li><%= review.content  %> <%= review.rating %>/5</li>
  <% end %>
</ul>

<%= link_to "All Restaurants", restaurants_path  %>
<%= link_to "Write a review", new_restaurant_review_path(@restaurant)  %>

